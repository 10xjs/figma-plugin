{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "styled-system": ["styled-system"],
      "styled-system/*": ["styled-system/*"]
    }
  },
  "exclude": ["node_modules", "plugin"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
